<main>
    <h1>Locales</h1>
    <div class="locals-container">
        <% localsApp.forEach(local => {%>
            <section>
                <h2>
                    <%= local.name %>
                </h2>
                <p>
                    <%= local.ubicacion %>
                </p>
                <a href='<%= localPath(local.id) %>'>Ver m√°s</a>
            </section>
            <% }) %>
    </div>
    <div class="pre-footer">
        <a href='<%= index %>'>Home</a>
        <% if (locals.currentUser) { %>
        <a href='<%= viewLocals %>'>Ver suscripciones</a>
        <a href='<%= newLocalPath %>'>Crear nuevo local</a>
        <% } %>
    </div>
</main>