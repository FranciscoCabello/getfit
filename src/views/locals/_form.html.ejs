<div class="form-main">
    <div class="form-div">
        <form method='post' action="<%= createLocalPath %>" enctype = "multipart/form-data">
            <% if (locals.errors){ %>
                <div class='errors'>
                    <p>El local no se pudo crear debido a los siguientes errores:</p>
                    <ul>
                        <% errors.forEach(error =>  { %>
                            <li>
                                <%= error.path%>:
                                    <%= error.message %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
            <% } %>
            <div class='field'>
                <label for='name'>Nombre</label>
                <input type='text' id='name' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" name='name' value="<%= local.name %>" />
            </div>
            <div class='field'>
                <label for='ubicacion'>Ubicaci√≥n</label>
                <input type="text" name="ubicacion" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" id='ubicacion' value="<%= local.ubicacion %>" />
            </div>
            <div class='field'>
                <label for='photo'>Foto</label>
                <input type='file' id="photo" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" name='photo' value="<%= local.photo %>" />
            </div>
            <div class='field'>
                <label for='horarioA'>Horario apertura</label>
                <input type='text' id="horarioA" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" name='horarioA' value="<%= local.horarioA %> " />
            </div>
            <div class='field'>
                <label for='horarioC'>Horario cierre</label>
                <input type='text' id="horarioC" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" name='horarioC' value="<%= local.horarioC %>" />
            </div>
            <div class='field'>
                <label for='precio'>Precio</label>
                <input type='number' id="precio" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" name='precio' value="<%= local.precio %>" />
            </div>
            <div class='field'>
                <label for='capacidad'>Capacidad</label>
                <input type='number' id="capacidad" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" name='capacidad' value="<%= local.capacidad %>" />
            </div>
            <div class='actions'>
                <input type='submit' value='Aceptar' class="btn-link-accept"/>
            </div>
        </form>
    </div>
</div>
