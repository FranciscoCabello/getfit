<div class="content-area">
    <div class="items-table">
        <h1 class="items-table">Actualizar local</h1>
        <div class="form-main">
            <div class="form-div">
                <form method='POST' action="<%= updateLocalPath %>" enctype = "multipart/form-data">
                    <div class='field'>
                        <label for='name'>Nombre</label>
                        <input type='text' id='name' name='name' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value="<%= local.name %>" />
                    </div>
                    <div class='field'>
                        <label for='ubicacion'>Ubicaci√≥n</label>
                        <input type="text" name="ubicacion" id='ubicacion' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value="<%= local.ubicacion %>" />
                    </div>
                    <div class='field'>
                        <label for='photo'>Foto</label>
                        <input type='file' id="photo" name='photo' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value="<%= local.photo %>" />
                    </div>
                    <div class='field'>
                        <label for='horarioA'>Horario apertura</label>
                        <input type='text' id="horarioA" name='horarioA' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value="<%= local.horarioA %> " />
                    </div>
                    <div class='field'>
                        <label for='horarioC'>Horario cierre</label>
                        <input type='text' id="horarioC" name='horarioC' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value="<%= local.horarioC %>" />
                    </div>
                    <div class='field'>
                        <label for='precio'>Precio</label>
                        <input type='number' id="precio" name='precio' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value="<%= local.precio %>" />
                    </div>
                    <div class='field'>
                        <label for='capacidad'>Capacidad</label>
                        <input type='number' id="capacidad" name='capacidad' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value="<%= local.capacidad %>" />
                    </div>
                    <div class='actions'>
                        <input type="hidden" name="_method" value="patch" />
                        <input type='submit' value='Aceptar' class="btn-link-accept"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="content-area">
    <div class="display-table-button">
        <a href='<%= localOwnerPath %>' class="btn-custom-back-local">Volver al local</a>
    </div>
</div>