<form method='post' action="<%= createActivitiesPath %>">
  <% if (locals.errors){ %>
    <div class='errors'>
      <p>La actividad no se pudo crear debido a los siguientes errores:</p>
      <ul>
        <% errors.forEach(error =>  { %>
        <li><%= error.path%>: <%= error.message %> </li>
        <% }) %>
      </ul>
    </div>
  <% } %>
  <div class='field'>
    <div class='field'>
        <label for='name'>Nombre</label>
        <input type='text' id='name' name='name'/>
    </div>
    <div class='field'>
        <label for='dificulty'>Dificultad</label>
        <input type='number' id="dificulty" name='dificulty'/>
    </div>
  </div>
  <div class='actions'>
    <input type='submit' value='Crear' />
  </div>
</form>
<a href='<%= activities %>'>Volver a actividades</a>
