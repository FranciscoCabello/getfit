<div class="items-table">
    <h1 class="items-table">Usuario</h1>
    <div class="form-main">
        <div class="form-div">
            <form method='post' action='<%= pathForm %>' enctype = "multipart/form-data">
                <% if (locals.errors){ %>
                    <div class='errors'>
                        <p>Error:</p>
                        <ul>
                            <% errors.forEach(error =>  { %>
                                <li>
                                    <%= error.path%>:
                                        <%= error.message %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>
                <div class='field'>
                    Nombre:<input type='text' name='name' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value='<%= user.name %>' placeholder="Ejemplo: Pedro"/>
                </div>
                <div class='field'>
                    Apellido: <input type='text' name='lastname' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value='<%= user.lastname %>' placeholder="Ejemplo: Carcuro"/>
                </div>
                <div class='field'>
                    Contraseña: <input type='password' name='password' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value='<%= user.password %>' placeholder="************"/>
                </div>
                <div class='field'>
                    Número: <input type='text' name='phone' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value='<%= user.phone %>' placeholder="Ejemplo: +56966261252 (12 digitos)"/>
                </div>
                <div class='field'>
                    Fotografía: <input type='file' name='photo' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value='<%= user.photo %>'/>
                </div>
                <div class='field'>
                    Email: <input type='text' name='email' class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" value='<%= user.email %>' placeholder="Ejemplo: pedro@carcuro.com"/>
                </div>
                <br>
                <div class='actions'>
                    <input type='submit' value='Aceptar' class="btn-link-accept"/>
                </div>
            </form>
        </div>
    </div>
</div>